
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post" action="@Url.Action("ValidateUser", "Login")">
    <div class="row">
        <span>Username</span><input type="text" name="Username" />
    </div>
    <div class="row">
        <span>Password</span><input type="text" name="Password" />
    </div>
    <div class="row">
        <input type="submit" value="Login" />
    </div>
</form>
